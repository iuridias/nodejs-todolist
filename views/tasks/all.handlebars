<h1>Lista de Tarefas</h1>
<ul class="task-list">
  {{#each tasks}}
  {{#if this.done}}
  <li class="done">
  {{else}}
  <li>
  {{/if}}
    <a href="/tasks/details/{{this.id}}" class="title">{{this.title}}</a>
    <div class="actions">
      <form action="/tasks/updatestatus" method="POST">
        <input type="hidden" name="id" value="{{this.id}}">
        <button type="submit">
          <i class="bi bi-check2"></i>
        </button>
      </form>
      <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
      <form action="/tasks/remove" method="POST">
        <input type="hidden" name="id" value="{{this.id}}">
        <button type="submit">
          <i class="bi bi-x-lg"></i>
        </button>
      </form>
    </div>
  </li>
  {{/each}}
</ul>